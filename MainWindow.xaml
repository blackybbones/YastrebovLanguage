<Window x:Class="YastrebovLanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YastrebovLanguage"
        mc:Ignorable="d"
        Title="Yastrebov" Height="450" Width="800" FontFamily="Comic Sans MS" Icon="pngs/school_logo.ico" Background="#e7fabf" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image Source="pngs/school_logo.png" HorizontalAlignment="Left"></Image>
        <TextBlock Text="Школа Лангуаге" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Frame Grid.Row="1" Name="MainFrame" ContentRendered="MainFrame_ContentRendered" ></Frame>
        <Button Name="BtnBack" Content="Назад" HorizontalAlignment="Right" Margin="5"
            Click="BtnBack_Click"></Button>
    </Grid>
</Window>
